<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nikolay.r3s.activities.SubscribeActivity"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="#d4d4d4">

    <TextView
        android:id="@+id/headerSubscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subscribe_header"
        android:gravity="center_horizontal"
        android:background="@color/colorItem"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textSize="18dp"
        android:textStyle="italic" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggestions_spinner"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/txtRss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="rss.cnn.com/rss/cnn_topstories.rss"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnSubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe_button"
        android:singleLine="false"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="#ecaf04"
        android:textColor="@color/colorItem" />

    <ProgressBar
        android:id="@+id/loading_panel"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center">
    </ProgressBar>
</LinearLayout>
